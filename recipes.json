---
layout: null
permalink: /recipes.json
---
[
{% for r in site.recipes %}
  {
    "title": {{ r.title | jsonify }},
    "url": {{ r.url | relative_url | jsonify }},
    "ingredients": {{ r.ingredients | jsonify }},
    "description": {{ r.description | default: r.excerpt | strip_html | jsonify }},
    "date": {{ r.date | date: "%Y-%m-%d" | jsonify }},
    "tags": {{ r.tags | jsonify }}
  }{% unless forloop.last %},{% endunless %}
{% endfor %}
]